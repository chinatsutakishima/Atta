<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
         トイレ詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @toile, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title black"><%= @toile.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <td>路線名：<%= simple_format @toile.body2 %></td>
                </tr>
                <tr>
                  <td>綺麗さ：<%= simple_format @toile.body3 %></td>
                </tr>
                <tr>
                  <td>詳細：<%= simple_format @toile.body %></td>
                </tr>
              </table>
              <% if @toile.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_toile_path(@toile), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

